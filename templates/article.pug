extends layout

block append vars
  - lang = page.metadata.lang || 'en';
  - bodyclass = 'article';
  - schematype = 'http://schema.org/Article';

block prepend title
  |#{page.title + ' - '}

block append head
  include mixins/meta
  +meta(page)

block content
  header.heading.content-wrap
    h1.heading__headline(itemprop='headline')= page.title
    p.heading__description(itemprop='description')= page.metadata.description
    p.heading__details
      include mixins/published
      include mixins/estimatedReadingTime
      +published(page.metadata.date)
      |#{' — '}
      +estimatedReadingTime(page.markdown)
      |#{' min read'}
  section.article__body.content-wrap(itemprop='articleBody')!= htmlMinifier.minify(typogr(page.html).smartypants(), { collapseBooleanAttributes: true, collapseWhitespace: true, decodeEntities: true, removeComments: true, removeEmptyAttributes: true, removeEmptyElements: true, removeRedundantAttributes: true, removeScriptTypeAttributes: true, removeStyleLinkTypeAttributes: true, sortAttributes: true, sortClassName: true })
